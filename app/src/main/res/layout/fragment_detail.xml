<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailFragment">





    <LinearLayout
        android:id="@+id/poster_linearLayout"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img_detail_poster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="TODO" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/poster_linearLayout"
        >
        <TextView
            android:id="@+id/txt_poster_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POSTER TÄ°TLE"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="23sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layout_title"
        >
        <TextView
            android:id="@+id/txt_Year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="year"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_gravity="start"
            android:paddingLeft="16dp"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_released"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layout_year"
        >
        <TextView
            android:id="@+id/txt_Released"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Released"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_gravity="start"
            android:paddingLeft="16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_runtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layout_released"
        >
        <TextView
            android:id="@+id/txt_runtime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="runtime"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_gravity="start"
            android:paddingLeft="16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layout_runtime"
        >
        <TextView
            android:id="@+id/txt_genre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="genre"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_gravity="start"
            android:paddingLeft="16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_director"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layout_genre"
        >
        <TextView
            android:id="@+id/txt_director"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Director"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_gravity="start"
            android:paddingLeft="16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_writer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layout_director"
        >
        <TextView
            android:id="@+id/txt_poster_writer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Writer"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_gravity="start"
            android:paddingLeft="16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_actors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layout_writer"
        >
        <TextView
            android:id="@+id/txt_poster_actors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACTORS,ACTORS,ACTORS,ACTORS,ACTORS,ACTORS,ACTORS,sssssssssssss"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_gravity="start"
            android:paddingLeft="16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layout_actors"
        >
        <TextView
            android:id="@+id/txt_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Language"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_gravity="start"
            android:paddingLeft="16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layout_language"
        >
        <TextView
            android:id="@+id/txt_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Country"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_gravity="start"
            android:paddingLeft="16dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_desciption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layout_country"
        >
        <TextView
            android:id="@+id/txt_descriptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="descriptions"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_gravity="start"
            android:paddingLeft="16dp"
            />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bardetail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/txt_erorrdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eror! try again"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        />



</androidx.constraintlayout.widget.ConstraintLayout>